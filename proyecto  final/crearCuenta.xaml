<Window x:Class="proyecto__final.crearCuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto__final"
        mc:Ignorable="d"
        Title="crearCuenta" Height="580" Width="800" WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" WindowStyle="None" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
    <Grid>
        <StackPanel Margin="20" Background="#FF050A29" >
            <Label Content="Nombre" Foreground="White" FontSize="20" HorizontalAlignment="Right"/>
            <TextBox Name="txbNombre" Margin="20" Height="30"/>
            <Label Content="Tipo" Foreground="White" FontSize="20" HorizontalAlignment="Right" />
            <TextBox Name="txbTipo"  Margin="20" Height="30" />
            <Label Content="usuario" Foreground="White" FontSize="20" HorizontalAlignment="Right" />
            <TextBox Name="txbUsuario"  Margin="20" Height="30"/>
            <Label Content="Contraseña " Foreground="White" FontSize="20" HorizontalAlignment="Right" />
            <TextBox Name="txbPassword"  Margin="20" Height="30"/>
            <Button  Content="CREAR CUENTA" FontSize="20" Margin="20" Width="200" x:Name="btnCREAR" Background="#FF9800" Foreground="White" FontWeight="SemiBold" Click="btnCREAR_Click" />
            <Button  Content="SALIR" FontSize="20" Width="200" x:Name="btnSALIR" Background="#FF9800" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Stretch" FlowDirection="LeftToRight" Click="btnSALIR_Click"/>
        </StackPanel>

    </Grid>
</Window>
